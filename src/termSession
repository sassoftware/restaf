/**
 * @description Run fseterm handler(if specified) and delete the cas|compute session(optional)
 * @async
 * @module termSession
 * @category restafedit/core
 * @param {appEnv} appEnv   app Environment from setup
 * @param {boolean=} deleteSession  default is true
 * @returns {promise}       status object
 * @example
 *  let r  = await termSession(appEnv)
 *  This is a good option for doing some post processing of the edited data.
 *  If the post processing is done on the Viya Server, recommend using restaf and restafedit to make
 *  the REST calls.
 */

async function termSession (appEnv, deleteSession) {
  const { store, session } = appEnv;
  const handlers = appEnv.appControl.editControl.handlers;
  if (handlers.fseterm != null) {
    await handlers.fseterm(appEnv);
  }

  // Setup for user supplied session which we do not want to delete
  if (deleteSession !== false) {
    await store.apiCall(session.links('delete'));
  };

  return { msg: 'Session terminated', statusCode: 0 };
};
export default termSession;
